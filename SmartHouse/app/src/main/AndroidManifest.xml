        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".planner.PlannerActivity" />
        <activity android:name=".command_center.CommandCenterActivity" />
        <activity android:name=".stats.StatsActivity"  android:label="@string/app_name" />
        <activity android:name=".notifications.NotificationsActivity"></activity>
        <activity android:name=".editor_activities.NumberPickerActivity" />
        <activity android:name=".editor_activities.OptionPickerActivity"/>
        <activity android:name=".editor_activities.TvEditor"/>
        <activity android:name=".editor_activities.AirConditioningEditor"/>
        <activity android:name=".editor_activities.WashingMachineEditor"/>
        <activity android:name=".editor_activities.WaterSystemEditor"/>
        <activity android:name=".editor_activities.CookingMachineEditor"/>
        <activity android:name=".editor_activities.FridgeEditor"/>
    </application>

</manifest>
